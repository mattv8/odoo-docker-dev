{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python Debugger: Remote Attach",
      "type": "debugpy",
      "request": "attach",
      "connect": {
        "host": "localhost",
        "port": 5678
      },
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}",
          "remoteRoot": "/custom-odoo"
        },
        {
          "localRoot": "${workspaceFolder}/../odoo",
          "remoteRoot": "/odoo"
        },
        {
          "localRoot": "${workspaceFolder}/../odoo-e",
          "remoteRoot": "/odoo-e"
        }
      ],
      "preLaunchTask": "Start Docker Stack"
    }
  ]
}
