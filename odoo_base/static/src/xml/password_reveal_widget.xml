<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
  <t t-name="odoo_base.PasswordRevealField" owl="1">
    <t t-if="props.readonly">
      <span t-esc="formattedValue"/>
    </t>
    <t t-else="">
      <div class="input-group">
        <input class="form-control"
               t-ref="input"
               t-att-type="state.reveal ? 'text' : 'password'"
               t-att-placeholder="props.placeholder"/>
        <button type="button" class="btn btn-outline-secondary input-group-append"
                t-on-click="toggleReveal">
          <i t-att-class="iconClass"/>
        </button>
      </div>
    </t>
  </t>
</templates>
